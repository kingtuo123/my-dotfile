client.unfocused           #2D353B    #232a2e    #859289    #e67e80    #343f44
client.urgent              #2D353B    #e67e80    #2D353B    #A7C080    #e67e80



# 窗口规则
for_window [ title  = "Save File"                  ] floating enable
for_window [ title  = "Open File"                  ] floating enable
for_window [ title  = "floating-terminal"          ] floating enable
for_window [ title  = "dropdown-terminal"          ] move scratchpad, scratchpad show, resize set width 1200px height 900px , move position center
for_window [ title  = "Picture-in-Picture"         ] floating enable, sticky enable, resize set width 384px height 216px
for_window [ app_id = "screenshot"                 ] floating enable, border normal
for_window [ app_id = "org.fcitx.fcitx5-config-qt" ] floating enable
for_window [ app_id = "io.bassi.Amberol"           ] floating enable
assign     [ app_id = "io.bassi.Amberol"           ] workspace $ws-music
assign     [ app_id = "org.freedesktop.Xwayland"   ] workspace $ws9
for_window [ app_id = "clash-verge"                ] floating enable
assign     [ app_id = "clash-verge"                ] workspace $ws-proxy



# 状态栏设置
bar {
	position top
	height 25
	workspace_min_width 25
	font pango:Sarasa Mono SC 9.5
	workspace_buttons yes
	wrap_scroll no
    #bindsym button5 workspace prev
    #bindsym button4 workspace next
	status_command i3blocks
	separator_symbol "|"
	strip_workspace_name no
	strip_workspace_numbers yes
	colors {
		statusline	#d3c6aa
		separator	#425047
		background	#2D353B
		focused_workspace	#A7C080		#A7C080		#2D353B
		active_workspace	#425047		#425047		#2D353B
		inactive_workspace	#2D353B		#2D353B		#d3c6aa
		urgent_workspace	#e67e80		#e67e80		#2D353B
	}
}
