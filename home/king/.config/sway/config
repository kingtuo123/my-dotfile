# 输出设备：swaymsg -t get_outputs
# 屏幕设置
output "HDMI-A-1" {
	mode 3840x2400@59.999Hz
	scale 2
	subpixel rgb
	color_profile icc ~/.local/share/icc/Sharp_L24.icm
	bg ~/Pictures/Wallpapers/rock-1.jpg fill
}



# 输入设备：swaymsg -t get_inputs
# 设备属性：swaymsg -t get_inputs -r
# 鼠标设置
input "13652:62858:Compx_VXE_NordicMouse_1K_Dongle" {
	accel_profile flat
	pointer_accel -0.5
}



# 自启动应用
exec /usr/bin/gentoo-pipewire-launcher restart &>/dev/null &
exec fcitx5 -D &>/dev/null &
exec mako &
exec swayidle -w timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"'



# 自定义变量
set $mod         Mod4
set $left        h
set $down        j
set $up          k
set $right       l
set $ws1         1:一
set $ws2         2:二
set $ws3         3:三
set $ws4         4:四
set $ws5         5:五
set $ws6         6:六
set $ws7         7:七
set $ws8         8:八
set $ws9         9:九
set $ws10        10:十
set $ws-music    11:[音乐]
set $ws-proxy    12:[代理]
set $term        foot
set $f_term      $term --title=floating-terminal
set $d_term      $term --title=dropdown-terminal
set $menu        rofi -show drun
#set $menu        wmenu-run -p '          Command          ' -l 5 -f 'JetBrainsMonoNL NF 9.5' -N '#232a2e' -n '#d3c6aa' -M '#A7C080' -m '#232a2e' -S '#A7C080' -s '#232a2e'



# sway 属性设置
font pango:Microsoft YaHei UI 9.5
hide_edge_borders smart_no_gaps
smart_borders on
smart_gaps on
gaps inner 0
gaps outer 0
titlebar_border_thickness 0
titlebar_padding 10  2
default_border pixel 2
default_orientation horizontal
focus_follows_mouse yes
floating_modifier $mod normal
focus_wrapping yes
workspace_auto_back_and_forth no



# 其它快捷键
bindsym $mod+Shift+r reload
bindsym $mod+Ctrl+r  reload
bindsym $mod+Shift+c kill
bindsym $mod+Space   floating toggle
bindsym $mod+s       layout stacking
bindsym $mod+w       layout tabbed
bindsym $mod+e       layout toggle split
bindsym $mod+f       fullscreen
bindsym $mod+b       splith
bindsym $mod+v       splitv
bindsym $mod+d       split none, focus child, border pixel
bindsym $mod+z       scratchpad show
bindsym $mod+Ctrl+z  move scratchpad
bindsym $mod+Shift+s sticky toggle
bindsym $mod+t       border normal



# 命令快捷键
bindsym $mod+r               exec $menu
bindsym $mod+Shift+q         exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'
bindsym $mod+Return          exec $term &>/dev/null
bindsym $mod+Shift+Return    exec $f_term &>/dev/null
bindsym $mod+Shift+z         exec $d_term &>/dev/null
bindsym XF86AudioMute        exec pactl set-sink-mute \@DEFAULT_SINK@ toggle && pkill -SIGRTMIN+2 i3blocks
bindsym XF86AudioLowerVolume exec pactl set-sink-volume \@DEFAULT_SINK@ -2% && pkill -SIGRTMIN+2 i3blocks
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume \@DEFAULT_SINK@ +2% && pkill -SIGRTMIN+2 i3blocks
bindsym XF86AudioMicMute     exec pactl set-source-mute \@DEFAULT_SOURCE@ toggle
bindsym $mod+Ctrl+s          exec screenshot.sh





# 切换聚焦窗口
bindsym $mod+Tab    focus next
bindsym Mod1+Tab    focus prev
bindsym $mod+a      focus parent
bindsym $mod+$left  focus left
bindsym $mod+$down  focus down
bindsym $mod+$up    focus up
bindsym $mod+$right focus right
bindsym $mod+Left   focus left
bindsym $mod+Down   focus down
bindsym $mod+Up     focus up
bindsym $mod+Right  focus right
bindsym $mod+grave  focus mode_toggle



# 移动窗口
bindsym $mod+Shift+$left  move left  50px
bindsym $mod+Shift+$down  move down  50px
bindsym $mod+Shift+$up    move up    50px
bindsym $mod+Shift+$right move right 50px
bindsym $mod+Shift+Left   move left
bindsym $mod+Shift+Down   move down
bindsym $mod+Shift+Up     move up
bindsym $mod+Shift+Right  move right
bindsym $mod+c            move position center 
bindsym $mod+Shift+1      move container to workspace number $ws1
bindsym $mod+Shift+2      move container to workspace number $ws2
bindsym $mod+Shift+3      move container to workspace number $ws3
bindsym $mod+Shift+4      move container to workspace number $ws4
bindsym $mod+Shift+5      move container to workspace number $ws5
bindsym $mod+Shift+6      move container to workspace number $ws6
bindsym $mod+Shift+7      move container to workspace number $ws7
bindsym $mod+Shift+8      move container to workspace number $ws8
bindsym $mod+Shift+9      move container to workspace number $ws9
bindsym $mod+Shift+0      move container to workspace number $ws10



# 窗口大小调节
bindsym $mod+Shift+minus resize shrink width  50px
bindsym $mod+Shift+equal resize grow   width  50px
bindsym $mod+Ctrl+minus  resize shrink height 50px
bindsym $mod+Ctrl+equal  resize grow   height 50px
bindsym $mod+minus       resize shrink height 50px , resize shrink width 50px
bindsym $mod+equal       resize grow   height 50px , resize grow   width 50px
bindsym --whole-window $mod+button4       resize grow height   50px , resize grow   width 50px
bindsym --whole-window $mod+button5       resize shrink height 50px , resize shrink width 50px
bindsym --whole-window $mod+Shift+button4 resize grow width    50px
bindsym --whole-window $mod+Shift+button5 resize shrink width  50px
bindsym --whole-window $mod+Ctrl+button4  resize grow height   50px
bindsym --whole-window $mod+Ctrl+button5  resize shrink height 50px



# 切换工作区
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10
bindsym $mod+Escape             workspace back_and_forth
bindsym $mod+comma              workspace prev
bindsym $mod+period             workspace next
bindsym $mod+bracketleft        workspace prev
bindsym $mod+bracketright       workspace next
bindsym $mod+Shift+bracketleft  move window to workspace prev, workspace prev
bindsym $mod+Shift+bracketright move window to workspace next, workspace next



# 颜色设置                 标题边框   标题背景   标题文字   分屏高亮   窗口边框
client.focused             #2D353B    #A7C080    #2D353B    #e67e80    #A7C080
client.focused_inactive    #2D353B    #425047    #9DA9A0    #e67e80    #343f44
